{% extends "base.html" %}
{% load i18n %}
{% block title %}{{ org.name }} - {% trans "Kategoriler" %}{% endblock %}
{% block content %}
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">{{ org.name }} - {% trans "Kategoriler" %}</h5>
    {% if 'categories_manage' in tenant_permissions %}
    <a class="btn btn-sm btn-primary" href="{% url 'categories_create' %}">{% trans "Yeni Kategori" %}</a>
    {% endif %}
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>{% trans "Kategori" %}</th>
            <th>{% trans "Tedarikçiler" %}</th>
            {% if 'categories_manage' in tenant_permissions %}<th class="text-end">{% trans "İşlemler" %}</th>{% endif %}
          </tr>
        </thead>
        <tbody>
          {% for c in root_categories %}
          <tr>
            <td class="fw-medium">
              {{ c.name }}
              {% if c.children.all %}
                <span class="badge bg-secondary ms-2">{{ c.children.all|length }} alt kategori</span>
              {% endif %}
            </td>
            <td class="text-muted">
              {% with names=c.suppliers.all %}
                {% for s in names %}{% if not forloop.first %}, {% endif %}{{ s.name }}{% empty %}-{% endfor %}
              {% endwith %}
            </td>
            {% if 'categories_manage' in tenant_permissions %}
            <td class="text-end d-flex gap-2 justify-content-end">
              <a class="btn btn-sm btn-outline-secondary" href="{% url 'category_form_fields_list' c.pk %}">{% trans "Form Alanları" %}</a>
              <a class="btn btn-sm btn-outline-secondary" href="{% url 'category_rules_list' c.pk %}">{% trans "Kurallar" %}</a>
              <a class="btn btn-sm btn-outline-primary" href="{% url 'categories_edit' c.pk %}">{% trans "Düzenle" %}</a>
              <a class="btn btn-sm btn-outline-danger" href="{% url 'categories_delete' c.pk %}">{% trans "Sil" %}</a>
            </td>
            {% endif %}
          </tr>
          {% include "core/_category_children.html" with children=c.children.all level=1 %}
          {% empty %}
            <tr><td colspan="3" class="text-center text-muted">{% trans "Henüz kategori yok." %}</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
