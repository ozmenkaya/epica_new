{% extends "base.html" %}
{% load i18n %}
{% block title %}{{ org.name }} - {% trans "Talepler" %}{% endblock %}
{% block content %}
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">{{ org.name }} - {% trans "Tüm Talepler" %}</h5>
    <a class="btn btn-sm btn-primary" href="{% url 'tickets_new' %}">{% trans "Yeni Talep" %}</a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>{% trans "Başlık" %}</th>
            <th>{% trans "Kategori" %}</th>
            <th>{% trans "Müşteri" %}</th>
            <th>{% trans "Teklif" %}</th>
            <th>{% trans "Durum" %}</th>
            <th>{% trans "Oluşturuldu" %}</th>
          </tr>
        </thead>
        <tbody>
        {% for t in tickets %}
          <tr>
            <td class="text-muted">#{{ t.id }}</td>
            <td><a href="{% url 'ticket_detail_owner' t.id %}">{{ t.title }}</a></td>
            <td>{{ t.category.name }}</td>
            <td>{{ t.customer.name }}</td>
            <td><span class="badge text-bg-secondary">{{ t.quotes_count }}</span></td>
            <td>{{ t.get_status_display }}</td>
            <td>{{ t.created_at|date:"Y-m-d H:i" }}</td>
          </tr>
        {% empty %}
          <tr><td colspan="7" class="text-center text-muted">{% trans "Talep yok" %}</td></tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
