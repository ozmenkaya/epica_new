{% extends "base.html" %}
{% load i18n %}
{% block content %}
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">{{ org.name }} - {% trans "Tedarikçiler" %}</h5>
    {% if 'suppliers_create' in tenant_permissions %}
      <a class="btn btn-sm btn-primary" href="{% url 'suppliers_create' %}">{% trans "Yeni Tedarikçi" %}</a>
    {% endif %}
  </div>
  <div class="card-body">
    <form method="get" class="row g-2 mb-3">
      <div class="col-12 col-md-6">
        <input class="form-control" type="search" name="q" placeholder="{% trans "Ara (isim/email/telefon)" %}" value="{{ q }}" />
      </div>
      <div class="col-12 col-md-auto d-flex align-items-center">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="has_email" name="has_email" value="1" {% if has_email %}checked{% endif %} />
          <label class="form-check-label" for="has_email">{% trans "Emaili olanlar" %}</label>
        </div>
      </div>
      <div class="col-12 col-md-auto">
        <button class="btn btn-outline-secondary" type="submit">{% trans "Ara" %}</button>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-sm table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>{% trans "İsim" %}</th>
            <th>{% trans "Email" %}</th>
            <th>{% trans "Telefon" %}</th>
            <th class="text-center">{% trans "Skor" %}</th>
            <th>{% trans "Oluşturuldu" %}</th>
            {% if 'suppliers_edit' in tenant_permissions or 'suppliers_delete' in tenant_permissions %}<th class="text-end">{% trans "İşlemler" %}</th>{% endif %}
          </tr>
        </thead>
        <tbody>
        {% for s in suppliers %}
          <tr>
            <td class="fw-medium">
              <a href="{% url 'supplier_detail' s.id %}" class="text-decoration-none">
                {{ s.name }}
              </a>
            </td>
            <td><span class="text-muted">{{ s.email|default:"-" }}</span></td>
            <td><span class="text-muted">{{ s.phone|default:"-" }}</span></td>
            <td class="text-center">
              {% if s.metrics %}
                <span class="badge 
                  {% if s.metrics.overall_score >= 90 %}bg-success
                  {% elif s.metrics.overall_score >= 75 %}bg-info
                  {% elif s.metrics.overall_score >= 60 %}bg-warning
                  {% else %}bg-secondary{% endif %}" 
                  style="font-size: 0.9rem; min-width: 50px;">
                  {{ s.metrics.overall_score|floatformat:0 }}
                </span>
              {% else %}
                <span class="text-muted small">-</span>
              {% endif %}
            </td>
            <td><small class="text-muted">{{ s.created_at|date:"Y-m-d H:i" }}</small></td>
            {% if 'suppliers_edit' in tenant_permissions or 'suppliers_delete' in tenant_permissions %}
            <td class="text-end">
              {% if 'suppliers_edit' in tenant_permissions %}<a class="btn btn-sm btn-outline-primary" href="{% url 'suppliers_edit' s.id %}">{% trans "Düzenle" %}</a>{% endif %}
              {% if 'suppliers_delete' in tenant_permissions %}<a class="btn btn-sm btn-outline-danger" href="{% url 'suppliers_delete' s.id %}">{% trans "Sil" %}</a>{% endif %}
            </td>
            {% endif %}
          </tr>
        {% empty %}
          <tr><td colspan="6" class="text-center text-muted">{% trans "Kayıt yok" %}</td></tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
