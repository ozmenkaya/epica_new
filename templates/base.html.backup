{% load i18n %}
<!doctype html>
<html lang="{{ LANGUAGE_CODE|default:'tr' }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Epica{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="/static/app.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
  <a class="navbar-brand" href="{% url 'home' %}">Epica</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav" aria-controls="topnav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="topnav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            {% if request.user.is_authenticated %}
              {% if request.user.customer_profile or request.user.supplier_profile %}
                {% if request.user.customer_profile %}
                  <li class="nav-item"><a class="nav-link" href="{% url 'customer_portal' %}">{% trans "Müşteri Portalım" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'customer_requests_list' %}">{% trans "Taleplerim" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'customer_offers_list' %}">{% trans "Tekliflerim" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'customer_orders_list' %}">{% trans "Siparişlerim" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'customer_products_list' %}">{% trans "Ürünlerim" %}</a></li>
                {% endif %}
                {% if request.user.supplier_profile %}
                  <li class="nav-item"><a class="nav-link" href="{% url 'supplier_portal' %}">{% trans "Tedarikçi Portalım" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'supplier_requests_list' %}">{% trans "Taleplerim" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'supplier_quotes_list' %}">{% trans "Tekliflerim" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'supplier_orders_list' %}">{% trans "Siparişler" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'supplier_products_list' %}">{% trans "Ürünlerim" %}</a></li>
                {% endif %}
              {% else %}
                <li class="nav-item"><a class="nav-link" href="{% url 'org_list' %}">{% trans "Organizasyonlar" %}</a></li>
                <li class="nav-item"><a class="nav-link" href="{% url 'dashboard' %}">{% trans "Dashboard" %}</a></li>
                <li class="nav-item"><a class="nav-link" href="{% url 'customers_list' %}">{% trans "Müşteriler" %}</a></li>
                {% if tenant_is_owner %}
                  <li class="nav-item"><a class="nav-link" href="{% url 'categories_list' %}">{% trans "Kategoriler" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'tickets_list' %}">{% trans "Talepler" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'offers_list' %}">{% trans "Teklifler" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'owner_products_list' %}">{% trans "Ürünler" %}</a></li>
                  <li class="nav-item"><a class="nav-link" href="{% url 'orders_list' %}">{% trans "Siparişler" %}</a></li>
                {% endif %}
                <li class="nav-item"><a class="nav-link" href="{% url 'suppliers_list' %}">{% trans "Tedarikçiler" %}</a></li>
                {% if tenant_is_member %}
                  <li class="nav-item"><a class="nav-link" href="{% url 'ai_assistant:chat' %}"><i class="bi bi-robot"></i> {% trans "AI Asistan" %}</a></li>
                {% endif %}
                {% if tenant_is_owner %}
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="bi bi-gear-fill"></i> {% trans "Ayarlar" %}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown">
                      <li><a class="dropdown-item" href="{% url 'ai_assistant:stats' %}"><i class="bi bi-graph-up"></i> {% trans "AI İstatistikler" %}</a></li>
                      <li><a class="dropdown-item" href="{% url 'ai_assistant:settings' %}"><i class="bi bi-sliders"></i> {% trans "AI Ayarlar" %}</a></li>
                    </ul>
                  </li>
                {% endif %}
              {% endif %}
            {% endif %}
          </ul>
          <ul class="navbar-nav ms-auto align-items-center gap-2">
            <li class="nav-item">
              {% include "_language_switcher.html" %}
            </li>
            {% if request.user.is_authenticated %}
              <li class="nav-item">
                <span class="navbar-text text-white-50 me-2">
                  <i class="bi bi-person-circle"></i> {{ request.user.username }}
                </span>
              </li>
              <li class="nav-item"><a class="nav-link btn btn-sm btn-outline-light" href="{% url 'logout' %}">{% trans "Çıkış" %}</a></li>
            {% else %}
              <li class="nav-item"><a class="nav-link btn btn-sm btn-primary" href="{% url 'login' %}">{% trans "Giriş" %}</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
    <main class="container my-4">
      {% block breadcrumbs %}{% endblock %}
      <div class="mb-3">{% include "_messages.html" %}</div>
      {% block content %}{% endblock %}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      // Auto-dismiss alerts after 5 seconds
      document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
        alerts.forEach(function(alert) {
          setTimeout(function() {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
          }, 5000); // 5 saniye sonra kaybol
        });
      });
    </script>
  </body>
</html>
